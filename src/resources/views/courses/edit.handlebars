<div class="mt-4">
    <form method="POST" action="/khoa-hoc/{{course._id}}?_method=PUT">
    <div class="form-group">
        <label for="name">Tên khóa học</label>
        <input value="{{course.name}}" type="text" class="form-control" id="name" name="name">
    </div>
    <div class="form-group">
        <label for="description">Mô tả khóa học</label>
        <textarea type="text" class="form-control" id="description" name="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="videoId">VideoId</label>
        <input value="{{course.videoId}}" type="text" class="form-control" id="videoId" name="videoId">
    </div>
    <div class="form-group">
        <label for="level">Trình độ</label>
        <input value="{{course.level}}" type="text" class="form-control" id="level" name="level">
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>